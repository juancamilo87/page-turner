<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="colorControlNormal">@color/primary_light</item>
    </style>
    <!-- Steps Material card theme. -->
    <style name="StepTheme" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/primary_light</item>
    </style>
    <style name="StepDisabledTheme" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">#ffd6d7d7</item>
    </style>

    <style name="DisabledImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:focusable">false</item>
        <item name="android:clickable">false</item>
    </style>

</resources>
